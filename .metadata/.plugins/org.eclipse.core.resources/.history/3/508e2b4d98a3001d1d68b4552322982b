package chapter3;

public class Test_2 {

	public static void main(String[] args) {
//		복합 대입 연산자
		int i = 5;
		int sum = 100;
		
		sum += i; // sum = sum + i; 
		System.out.println("sum = " + sum);
		
		sum = 0;
		sum -= i; // sum = sum - i;
		System.out.println("sum = " + sum);

		sum = 0;
		sum *= i; // sum = sum * i;
		System.out.println("sum = " + sum);

		sum = 0;
		sum /= i; // sum = sum / i;
		System.out.println("sum = " + sum);
	}

}
