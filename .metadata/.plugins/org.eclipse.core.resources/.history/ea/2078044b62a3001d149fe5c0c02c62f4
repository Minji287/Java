package package_1;

import java.util.Scanner;

public class Test_1 {

	public static void main(String[] args) {
		Scanner scn = new Scanner(System.in);
		
		System.out.println("이름?");
		String name = scn.nextLine();
		System.out.println("국어 성적?");
		String kor = scn.nextLine();
		System.out.println("수학 성적?");
		String mat = scn.nextLine();
		System.out.println("영어 성적?");
		String eng = scn.nextLine();
		
		int total = Integer.parseInt(kor) + Integer.parseInt(mat) + Integer.parseInt(eng);
		int avg = total / 3;
		
		System.out.println("이름= " + name);
//		System.out.printf("이름= %s%n", name);.
		System.out.println("국어= " + kor);
//		System.out.printf("국어= %s%n", kor);
		System.out.println("수학= " + mat);
//		System.out.printf("수학= %s%n", mat);
		System.out.println("영어= " + eng);
//		System.out.printf("영어= %s%n", eng);
		System.out.println("합계: " + total);
//		System.out.printf("합계: %s%n", total);
		System.out.println("평균: " + avg);
//		System.out.printf("평균: %d", avg);
	}

}
