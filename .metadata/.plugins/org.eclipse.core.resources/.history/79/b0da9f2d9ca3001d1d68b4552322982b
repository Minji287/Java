package chapter3;

public class Test_3 {

	public static void main(String[] args) {
//		shift(비트) 연산자
//		<< (왼쪽으로 한번 밀어라, 2로 곱한 결과)
//		>> (오른쪽으로 한번 밀어라, 2로 나눈 결과)
		int a = 3;
		int b;
		
		b = a << 2; // a*2*2 
		System.out.println(b);
		
		a = 12;
		b = a >> 1; // a/2
		System.out.println(b);
		
//		복합 연산자
		int k1 = 5;
		int ss = 20;
		
		ss += k1;
		System.out.println(ss);
		ss = ss + k1;
		System.out.println(ss);
		
//		
		int p1 = k1 & ss;
		System.out.println(p1);
		
		int p2 = k1 | ss;
		System.out.println(p2);
	}

}
